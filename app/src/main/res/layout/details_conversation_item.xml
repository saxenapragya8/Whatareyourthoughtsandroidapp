<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_16"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/participantUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/creationDate"
        android:lines="1"
        android:fontFamily="@string/fontStyleBody2"
        android:textColor="@color/colorBody2"
        android:textSize="@dimen/textSizeBody2"
        android:text="Pranav Gupta" />

    <TextView
        android:id="@+id/creationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/participantUser"
        android:layout_marginStart="@dimen/_16"
        android:gravity="end"
        android:lines="1"
        android:fontFamily="@string/fontStyleCaption"
        android:textColor="@color/colorCaption"
        android:textSize="@dimen/textSizeCaption"
        android:text="Feb 12" />
    <!-- TODO change date format: see github web code -->

    <TextView
        android:id="@+id/commentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/participantUser"
        android:layout_marginTop="@dimen/_12"
        android:layout_marginBottom="@dimen/_8"
        android:layout_alignParentStart="true"
        android:fontFamily="@string/fontStyleBody1"
        android:textColor="@color/colorBody1"
        android:textSize="@dimen/textSizeBody1"
        android:lineSpacingExtra="@dimen/_2"
        android:text="@string/large_text" />

</RelativeLayout>



