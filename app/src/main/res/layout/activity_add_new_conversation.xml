<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_conversation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wayt.com.whatareyourthoughts.AddNewConversationActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="8">
        <TextView
            android:layout_columnSpan="2"
            android:text="To: "
            android:textIsSelectable="false"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:inputType="textEmailAddress"
            android:layout_columnSpan="6"
            android:id="@+id/toEmails"/>
        <TextView
            android:layout_columnSpan="2"
            android:text="Subject: "
            android:textIsSelectable="false"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_columnSpan="6"
            android:id="@+id/subject" />
        <TextView
            android:layout_columnSpan="2"
            android:text="Inspiration: "
            android:textIsSelectable="false"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_columnSpan="6"
            android:id="@+id/inspiration"
            android:inputType="textUri"/>
        <TextView
            android:layout_columnSpan="8"
            android:text="What are your thoughts? "
            android:textIsSelectable="false"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_columnSpan="8"
            android:id="@+id/content"
            android:minLines="10"
            android:layout_gravity="top"/>
        <Button
            android:text="Add"
            android:onClick="onSaveDataClicked"
            android:layout_gravity="bottom"/>

    </GridLayout>

</RelativeLayout>
