<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/participantUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_16"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_16"
        android:layout_marginEnd="@dimen/_16"
        android:lines="1"
        android:fontFamily="@string/fontStyleBody2"
        android:textColor="@color/colorBody2"
        android:textSize="@dimen/textSizeBody2"
        android:text="Pranav Gupta" />

    <EditText
        android:id="@+id/newComment"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_12"
        android:layout_marginEnd="@dimen/_12"
        android:layout_below="@+id/participantUser"
        android:layout_marginTop="@dimen/_12"
        android:layout_marginBottom="@dimen/_24"
        android:fontFamily="@string/fontStyleBody1"
        android:hint="@string/hint_comment"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="@dimen/_2"
        android:textColor="@color/colorBody1"
        android:textSize="@dimen/textSizeBody1"
        android:visibility="visible" />

</RelativeLayout>